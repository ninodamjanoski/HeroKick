<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvBrandNameLabel"
        android:text="@string/nameLabel"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvBrandNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameLabel"
        android:text="@string/brandLabel"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/medium_margin" />
    <TextView
        android:id="@+id/tvSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/tvBrandNameLabel"
        app:layout_constraintEnd_toEndOf="@+id/tvBrandNameLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/sizeLabel"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/ProximaFontSemibold.Size16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNameLabel"
        app:layout_constraintTop_toTopOf="@+id/tvNameLabel"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameLabel"
        tools:text="Naasdasdsdasdasdasdme"/>

    <TextView
        android:id="@+id/tvBrand"
        style="@style/ProximaFontSemibold.Size14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBrandNameLabel"
        app:layout_constraintTop_toTopOf="@+id/tvBrandNameLabel"
        app:layout_constraintBottom_toBottomOf="@+id/tvBrandNameLabel"
        tools:text="Name"/>

    <TextView
        android:id="@+id/tvSize"
        style="@style/ProductListSizeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSizeLabel"
        app:layout_constraintTop_toTopOf="@+id/tvSizeLabel"
        app:layout_constraintBottom_toBottomOf="@+id/tvSizeLabel"
        tools:text="Name"/>

</androidx.constraintlayout.widget.ConstraintLayout>